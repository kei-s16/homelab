services:
  webui:
    image: ghcr.io/open-webui/open-webui:main
    volumes:
      - type: bind
        source: ./.open-webui
        target: /app/backend/data
    ports:
      - '80:8080'
    environment:
      OLLAMA_BASE_URL: http://{{ ansible_eth0.ipv4.address }}:11434
    extra_hosts:
      - "host.docker.internal:host-gateway"
    restart: always

